<h1>管理者の投稿</h1>
  <div>
    <% if user_signed_in? %>
      <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
      <%= "#{current_user.nickname}さんはログイン中です"%>

    <% else %>
      <%= link_to 'ログイン', new_user_session_path %>
      <%= link_to '新規登録', new_user_registration_path %>
    <% end %>
  </div>

  <div>
    <% if user_signed_in? && current_user.admin? %>
      <%= link_to '管理者投稿フォーム' %>
    <% else %>
      <% render :index %>
    <% end %>
  </div>

  <div>
    <ul>＜管理者の投稿＞
      <% @posts.each do |f| %>
        <li>
          <td><%= f.text %></td>
          <td><%= f.created_at %></td>
        </li>
      <% end %>
    </ul>
  </div>